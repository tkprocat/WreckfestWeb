# ============================================================
# WRECKFEST WEB APPLICATION CONFIGURATION
# ============================================================

# -------------------- Application Settings --------------------
APP_NAME=WreckfestWeb
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# -------------------- Database Configuration --------------------
# Using SQLite by default (recommended for this application)
DB_CONNECTION=sqlite
# For MySQL/MariaDB, uncomment and configure:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=wreckfest
# DB_USERNAME=root
# DB_PASSWORD=

# -------------------- Wreckfest Controller API --------------------
# Point this to your WreckfestController C# service
WRECKFEST_API_URL=https://localhost:5101/api
WRECKFEST_OCR_ENABLED=false

# -------------------- Broadcasting & Real-time Features --------------------
# Required for real-time player updates and track changes
BROADCAST_DRIVER=reverb
BROADCAST_CONNECTION=reverb

# Laravel Reverb WebSocket Server
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Reverb SSL Configuration (Optional - for production with SSL)
# REVERB_SERVER_CERT_PATH=/path/to/ssl/cert.crt
# REVERB_SERVER_KEY_PATH=/path/to/ssl/cert.key

# Vite Frontend Configuration (Auto-populated from settings above)
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# -------------------- Session & Cache --------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

CACHE_STORE=database
# CACHE_PREFIX=

# -------------------- Queue Configuration --------------------
QUEUE_CONNECTION=database

# -------------------- Logging --------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -------------------- AI Assistant (Optional) --------------------
# Requires OpenAI API key for track rotation assistant
WRECKFEST_AI_MODEL=gpt-4o-mini
WRECKFEST_AI_ASYNC=true
OPENAI_API_KEY=

# -------------------- Backup Configuration (Optional) --------------------
# Set to true to enable SFTP backups to remote server
BACKUP_SFTP_ENABLED=false
BACKUP_SFTP_HOST=
BACKUP_SFTP_PORT=22
BACKUP_SFTP_USERNAME=
BACKUP_SFTP_ROOT=
BACKUP_SFTP_PASSWORD=
BACKUP_SFTP_TIMEOUT=30

# For private key authentication (more secure, recommended):
# BACKUP_SFTP_PRIVATE_KEY=/path/to/private/key
# BACKUP_SFTP_PASSPHRASE=

# Optional: Encrypt backup archives with a password
# BACKUP_ARCHIVE_PASSWORD=

# -------------------- Mail Configuration --------------------
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================
# ADVANCED / RARELY USED LARAVEL CONFIGURATION
# ============================================================
# Most users won't need to modify these settings
# ============================================================

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP Configuration
PHP_CLI_SERVER_WORKERS=4

# Hashing
BCRYPT_ROUNDS=12

# Filesystem
FILESYSTEM_DISK=local

# Memcached
MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# AWS Configuration (if using S3 for storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
