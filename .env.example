APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Wreckfest API Configuration
WRECKFEST_API_URL=https://localhost:5101/api
WRECKFEST_OCR_ENABLED=false

# Backup Configuration
# Set to true to enable SFTP backups to remote server
BACKUP_SFTP_ENABLED=false

# SFTP Server Configuration (only required if BACKUP_SFTP_ENABLED=true)
BACKUP_SFTP_HOST=
BACKUP_SFTP_PORT=22
BACKUP_SFTP_USERNAME=backup-user
BACKUP_SFTP_ROOT=/backups/wreckfest

# Authentication: Use EITHER password OR private key (private key is recommended for production)
# Option 1: Password authentication (simpler, less secure)
BACKUP_SFTP_PASSWORD=your-secure-password

# Option 2: Private key authentication (more secure, recommended)
# Uncomment and set these if using private key instead of password
# BACKUP_SFTP_PRIVATE_KEY=/path/to/private/key
# BACKUP_SFTP_PASSPHRASE=  # Only needed if private key has a passphrase

# Connection settings
BACKUP_SFTP_TIMEOUT=30

# Optional: Encrypt backup archives with a password
# BACKUP_ARCHIVE_PASSWORD=
